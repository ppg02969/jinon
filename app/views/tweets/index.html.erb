<main class="main">
  <div class="inner">
    <%# ログインしているときは以下を表示する %>
    <% if user_signed_in? %>
      <div class="greeting"> 
        <%= "こんにちは、#{current_user.nickname}さん" %>
        <%#= link_to current_user.nickname, user_path(current_user.id), class: :greeting__link%>
      </div>
      <% else %>
        <%= "こんにちは、ゲストさん"%>
    <% end %>
    <%# // ログインしているときは上記を表示する %>
    <div class="card__wrapper">
      <%# 投稿機能実装後、部分テンプレートでプロトタイプ投稿一覧を表示する %>
      <%= render partial: "tweet", collection: @tweets %>
    </div>
  </div>
</main>
