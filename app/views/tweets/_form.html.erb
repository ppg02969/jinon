<%= form_with model: @prototype, local: true do |f| %>
  <div class="field">
    <%= f.label "タイトル" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label "音声説明" %><br />
    <%= f.text_area :description, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label "音声" %><br />
    <%= f.file_field :voice %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>